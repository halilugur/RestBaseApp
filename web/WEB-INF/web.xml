<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/</welcome-file>
    </welcome-file-list>
    <servlet>
        <!-- Servlet adı ve class tanımı yapıyoruz -->
        <!-- Dikkat etmemiz gereken servlet-class parametresinin jersey servlet container'ı olmasıdır -->
        <servlet-name>Flight Service</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        
        <!-- init param ile servlete özgü paket tanımı yapıyoruz. İlgili url geldiğinde 
        container url'e ulaşmak için bu paket içerisinde arama yapacaktır.-->
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>webservice</param-value>
        </init-param>
        
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <!-- Servlet mapping yapıyoruz -->
        <!-- url pattern olarak display-name/rest/ ile başlayan herhangi bir url request geldiginde container ilgili paket
        icerisinde kaynagı arayacaktır. -->
        <servlet-name>Flight Service</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
  
</web-app>
